{
  "name": "tsconfig-paths-autogen",
  "version": "1.0.0",
  "description": "Autogenerate tsconfig paths based on folder structure.",
  "main": "index.min.js",
  "files": [
    "index.min.js"
  ],
  "repository": "git@github.com:zachbryant/tsconfig-paths-autogen.git",
  "author": "Zach Bryant <zdb282@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc index.ts",
    "lint": "eslint index.ts --fix",
    "minify": "terser --compress --mangle toplevel,reserved=['require','generatePaths','baseUrl','rootAlias','customAliasMap','maxDirectoryDepth','excludeAliasForDirectories','excludeAliasForSubDirectories','includeAliasForDirectories'] --comments false -o index.min.js -- index.js",
    "prepublishOnly": "npm-run-all -s build minify"
  },
  "devDependencies": {
    "@types/node": "^15.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.25.0",
    "npm-run-all": "^4.1.5",
    "terser": "^5.7.0",
    "typescript": "^4.2.4"
  }
}
